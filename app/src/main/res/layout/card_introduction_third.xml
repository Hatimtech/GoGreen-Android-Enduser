<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">

    <TextView
        fontPath="fonts/Montserrat_Regular.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:text="Convenience at your fingertips "
        android:textColor="@color/textcolor"
        android:textSize="@dimen/Size5" />


    <ImageView

        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:src="@mipmap/fingertips"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:text=" Add cars, schedule washes, make payment, renewals"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/Size3" />
</LinearLayout>